{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./app",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "paths": {
      "@": [ "./app/index" ],
      "@/*": [ "./app/*" ],
    },
    "resolveJsonModule": true,
    "rootDir": "./",
    "skipLibCheck": false,
    "strict": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": true
  },
  "exclude": [
    "node_modules",
    "./dist",
    "./e2e"
  ],
  "include": [
    "./app/**/*",
    "global.d.ts",
    "**/*.vue"
  ]
}