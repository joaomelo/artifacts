{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": false,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "noImplicitThis": true,
    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": false,
    "jsx": "preserve",
    "jsxImportSource": "vue",    
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@domain/*": [
        "./domain/*"
      ],
      "@data/*": [
        "./data/*"
      ],
      "@display/*": [
        "./display/*"
      ],
      "@lib/*": [
        "./lib/*"
      ],
      "@main/*": [
        "./main/*"
      ],
      "@domain": [
        "./domain/index"
      ],
      "@data": [
        "./data/index"
      ],
      "@display": [
        "./display/index"
      ],
      "@lib": [
        "./lib/index"
      ],
      "@main": [
        "./main/index"
      ],
    },
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./main/**/*",
    "./data/**/*",
    "./domain/**/*",
    "./display/**/*",
    "./lib/**/*",
    "./tests/**/*",
    "global.d.ts",
    "**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "./dist"
  ]  
}