{
  "name": "calystone",
  "version": "0.25.0",
  "main": "src/index.html",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently -s \"all\" -k \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "firebase --project demo-test emulators:start",
    "dev:client": "vite",
    "dev:ready": "wait-on --verbose tcp:8081 http://127.0.0.1:9099 http://127.0.0.1:4000",
    "test": "npm run lint && npm run test:unit && npm run test:e2e:run",
    "test:unit": "vitest run",
    "test:e2e:open": "concurrently -s \"first\" -k \"npm run dev\" \"npm run dev:ready && cypress open --e2e --browser chrome\"",
    "test:e2e:run": "concurrently -s \"first\" -k \"npm run dev\" \"npm run dev:ready && cypress run --e2e\"",
    "lint": "eslint body/ cypress/ lib/ main/ view/ --ext .js,.vue",
    "build": "vite build",
    "deploy": "firebase deploy",
    "release": "release-it --ci --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joaomelo/calystone.git"
  },
  "author": "jo√£o melo <j@melo.plus> (https://joao.melo.plus)",
  "dependencies": {
    "@codemirror/autocomplete": "^6.11.1",
    "@codemirror/commands": "^6.3.2",
    "@codemirror/lang-markdown": "^6.2.3",
    "@codemirror/language": "^6.9.3",
    "@codemirror/state": "^6.3.3",
    "@codemirror/view": "^6.22.3",
    "firebase": "^10.4.0",
    "fuse.js": "^7.0.0",
    "lodash.clonedeep": "^4.5.0",
    "uuid": "^9.0.1",
    "vue": "^3.4.6",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^8.0.1",
    "@stylistic/eslint-plugin": "^1.5.3",
    "@vitejs/plugin-vue": "^5.0.2",
    "concurrently": "^8.2.2",
    "cypress": "^13.6.0",
    "eslint": "^8.41.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-perfectionist": "^2.5.0",
    "eslint-plugin-vue": "^9.19.2",
    "firebase-tools": "^13.0.2",
    "release-it": "^17.0.0",
    "vite": "^5.0.11",
    "vitest": "^0.31.4",
    "vue-eslint-parser": "^9.4.0",
    "wait-on": "^7.2.0"
  }
}
