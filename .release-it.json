{
  "git": {
    "tagName": "v${version}",
    "commitMessage": "chore[no ci]: release v${version}",
    "addUntrackedFiles": true
  },
  "npm": {
    "skipChecks": true,
    "publish": false
  },
  "github": {
    "release": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md",
      "parserOpts": {
        "mergePattern": "^merge pull request #(\\d+) from (.*)$"
      }
    }
  },
  "hooks": {
    "after:bump": ["npm run readme"]
  }
}
