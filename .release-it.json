{
  "git": {
    "tagName": "v${version}",
    "commitMessage": "chore[no ci]: release v${version}"
  },
  "npm": {
    "skipChecks": true,
    "publish": false
  },
  "github": {
    "release": false
  },
  "@release-it/conventional-changelog": {
    "preset": {
      "name": "conventionalcommits"
    }
  },
  "hooks": {
    "before:init": "npm test",
    "after:bump": ["npm run build", "npm run deploy"]
  }
}
